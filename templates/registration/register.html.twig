{% extends 'layout.html.twig' %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

    <h1>Cr√©er un compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {label: 'Nom d\'utilisateur'})  }}
        {{ form_row(registrationForm.email, {label: 'Adresse e-mail'})  }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'})  }}

        <button type="submit" class="btn btn-lg btn-dark">Valider</button>
    {{ form_end(registrationForm) }}
{% endblock %}
